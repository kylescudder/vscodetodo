{
  "name": "thingstodo",
  "displayName": "Things To Do",
  "description": "A lightweight to do extension for VSCode that connects to your GitHub account giving you all your notes from any VSCode instance. Replace all of those sticky notes scattered around your desk with a simple virtual solution.",
  "version": "0.2.5",
  "publisher": "kylescudder",
  "icon": "media/checklist.png",
  "galleryBanner": {
    "color": "#238636",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.53.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kylescudder/vscodetodo"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:thingstodo.refresh",
    "onCommand:thingstodo.addToDo",
    "onView:thingstodo-sidebar"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "thingstodo-sidebar-view",
          "title": "Things To Do",
          "icon": "media/checklist.svg"
        }
      ]
    },
    "views": {
      "thingstodo-sidebar-view": [
        {
          "type": "webview",
          "id": "thingstodo-sidebar",
          "name": "Things To Do",
          "icon": "media/checklist.svg",
          "contextualTitle": "ThingsToDo"
        }
      ]
    },
    "commands": [
      {
        "command": "thingstodo.refresh",
        "category": "ThingsToDo",
        "title": "Refresh"
      },
      {
        "command": "thingstodo.addToDo",
        "category": "ThingsToDo",
        "title": "Add to Things To Do"
      }
    ]
  },
  "scripts": {
    "extbuild": "concurrently \"rollup -c -w\" \"webpack --mode production --devtool hidden-source-map\"",
    "watch": "concurrently \"rollup -c -w\" \"webpack --watch --mode production --devtool hidden-source-map\""
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.1",
    "@tsconfig/svelte": "^3.0.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.23",
    "@types/polka": "^0.5.4",
    "@types/vscode": "^1.65.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "concurrently": "^7.0.0",
    "eslint": "^8.12.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "rollup": "^2.70.1",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.46.4",
    "svelte-check": "^2.4.6",
    "svelte-preprocess": "^4.10.4",
    "ts-loader": "^9.2.8",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3",
    "vscode-test": "^1.6.1",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "polka": "^0.5.2"
  }
}
