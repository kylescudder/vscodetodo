{
  "name": "thingstodo",
  "displayName": "Things To Do",
  "description": "A lightweight to do extension for VSCode that connects to your GitHub account giving you all your notes from any VSCode instance. Replace all of those sticky notes scattered around your desk with a simple virtual solution.",
  "version": "0.2.1",
  "publisher": "kylescudder",
  "icon": "media/checklist.png",
  "galleryBanner": {
    "color": "#238636",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.53.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kylescudder/vscodetodo"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vscodetodo.helloWorld",
    "onCommand:vscodetodo.askQuestion",
    "onCommand:vscodetodo.refresh",
    "onCommand:vscodetodo.addToDo",
    "onCommand:vscodetodo.authenticate",
    "onView:vstodo-sidebar"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vstodo-sidebar-view",
          "title": "VSToDo",
          "icon": "media/checklist.svg"
        }
      ]
    },
    "views": {
      "vstodo-sidebar-view": [
        {
          "type": "webview",
          "id": "vstodo-sidebar",
          "name": "VSToDo",
          "icon": "media/checklist.svg",
          "contextualTitle": "VSToDo"
        }
      ]
    },
    "commands": [
      {
        "command": "vscodetodo.helloWorld",
        "category": "VSToDo",
        "title": "Hello World"
      },
      {
        "command": "vscodetodo.askQuestion",
        "category": "VSToDo",
        "title": "Ask Question"
      },
      {
        "command": "vscodetodo.refresh",
        "category": "VSToDo",
        "title": "Refresh"
      },
      {
        "command": "vscodetodo.addToDo",
        "category": "VSToDo",
        "title": "Add to VSToDo"
      },
      {
        "command": "vscodetodo.authenticate",
        "category": "VSToDo",
        "title": "Authenticate"
      }
    ]
  },
  "scripts": {
    "extbuild": "concurrently \"rollup -c -w\" \"webpack --mode production --devtool hidden-source-map\"",
    "watch": "concurrently \"rollup -c -w\" \"webpack --watch --mode production --devtool hidden-source-map\""
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-typescript": "^8.2.0",
    "@tsconfig/svelte": "^1.0.10",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.20.13",
    "@types/polka": "^0.5.2",
    "@types/vscode": "^1.53.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "concurrently": "^5.3.0",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "rollup": "^2.39.0",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.32.3",
    "svelte-check": "^1.1.35",
    "svelte-preprocess": "^4.6.9",
    "ts-loader": "^8.0.14",
    "tslib": "^2.2.0",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0"
  },
  "dependencies": {
    "polka": "^0.5.2"
  }
}
